link(href="/style.css" rel="stylesheet" type="text/css")

body
    div#room(style="display:none;")
        |#{seed || "/"}
    div#wrapper


script.
    var htmlSync = new HTMLSync({
        room: $("#room").html(),
        debug:false
    });
	
style.
    #wrapper{
        width: 50%;
        position: fixed;
        top: 0px;
        left: 33%;
        overflow: hidden;
    }

    .triangle{
        position: fixed;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 50px 80px 50px;
        animation-name: fade-in;
        animation-duration: 1s;
    }

    @keyframes fade-in {
        from{opacity:0;}
        to{opacity:1;}
    }